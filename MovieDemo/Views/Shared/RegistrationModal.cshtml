<div class="modal fade" id="register" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4><i class="fa fa-user"></i> Registration</h4>

            </div>
            <div class="modal-body">
               
                <form name="userForm" id="registerForm" >
                    <div class=" row ">
                        <div class="col-md-10 col-md-offset-1">
                            <div class=" input-field" >
                                <i class="material-icons prefix">email</i>
                                <label for="email">E-mail:</label>
                                <input name="email"
                                       type="email"
                                      
                                       class="form-control"
                                       ng-model="registration.userData.Email"
                                       ng-model-options="{ debounce: 600 }"
                                       required>
                            </div>

                            <div class="input-field " >
                                <i class="material-icons prefix">account_circle</i>
                                <label for="name">
                                    Name
                                </label>
                                <input type="text"
                                       class="form-control"
                                       name="login"
                                       ng-model="registration.userData.Name"
                                       ng-model-options="{ debounce: 600 }"
                                       required>

                            </div>

                            <div class=" input-field" >
                                <i class="material-icons prefix">lock</i>
                                <label for="password">
                                    Password
                                </label>
                                <input type="password"
                                       class="form-control"
                                       name="password"
                                       ng-minlength="6"
                                       ng-maxlength="100"
                                       required>
                            </div>

                            <div class="input-field" >
                                <i class="material-icons prefix">check circle</i>
                                <label for="password_confirm">
                                    Repeat password
                                </label>
                                <input type="password"
                                       class="form-control"
                                       
                                       name="repeatPassword"
                                       required>

                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-8">
                            <div id="registrationFail" class="alert alert-danger text-center" hidden></div>
                            <div class="text-center">
                                <button type="submit" ng-disabled="!userForm.$valid" class="btn btn-primary btn-lg btn-ptc waves-effect waves-light">Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



