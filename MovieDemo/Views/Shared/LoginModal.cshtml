
<div class="modal fade" id="login" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <!--Header-->
            <div class="modal-header text-center">
                <h4><i class="fa fa-user"></i> Sign in</h4>
            </div>

            <!--/.Header-->
            <!--Body-->
            <div class="modal-body">
        
                    
                        <!--Form-->
                <form id="logInForm" name="logInForm">
                    <div class="row">
                        <div class="col-md-10 col-md-offset-1">
                            <div class="input-field">
                                <i class="material-icons prefix">account_circle</i>
                                <input id="icon_prefix" type="text" class="validate" name="userName" required="" autofocus="">
                                <label for="icon_prefix" class="">Your Login</label>
                            </div>

                            <div class="input-field">
                                <i class="material-icons prefix">lock</i>
                                <input id="icon_email" name="password" type="password" class="validate" required="">
                                <label for="icon_email" class="">Your password</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-9"><div id="loginFail" class="text-center alert alert-danger" hidden>Incorrect email or password!</div></div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-2 col-md-9">
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-lg btn-ptc waves-effect waves-light">Sign in</button>
                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>